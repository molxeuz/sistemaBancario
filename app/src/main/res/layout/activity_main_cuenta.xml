<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#57DCDBDB" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="#333232">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:text=" CREAR CUENTA "
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="-130dp"
            android:text=" INGRESE INFORMACION DE CUENTA "
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3C3B3B"
            android:layout_marginLeft="-360dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#3C3B3B"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_account_circle_24"/>

            <ImageButton
                android:id="@+id/ibnregresarcuenta"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#3C3B3B"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_logout_24"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-500dp"
        android:gravity="center"
        android:background="#3C3B3B" >

        <EditText
            android:id="@+id/etidentificacioncuenta"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-60dp"
            android:textColorHint="#ffff"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:textSize="15dp"
            android:enabled="false"
            android:drawableStart="@drawable/ic_baseline_person_add_24"/>

        <EditText
            android:id="@+id/etfechacuenta"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="-0dp"
            android:hint="  Ingrese fecha de creacion"
            android:textColorHint="#ffff"
            android:textColor="#FFFFFF"
            android:inputType="date"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_baseline_date_range_24"/>

        <EditText
            android:id="@+id/etsaldocuenta"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="60dp"
            android:hint="  Ingrese saldo de su cuenta"
            android:textColorHint="#ffff"
            android:textColor="#FFFFFF"
            android:inputType="number"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_baseline_numbers_24" />

    </LinearLayout>

    <Button
        android:id="@+id/btnguardarcuenta"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#6A6767"
        android:text="GUARDAR"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:textColor="#FFFFFF" />

</LinearLayout>