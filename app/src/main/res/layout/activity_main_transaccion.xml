<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_transaccion"
    android:orientation="vertical"
    android:background="#57DCDBDB" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:background="#333232">

        <TextView
            android:id="@+id/tvtotalsaldocliente"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:text=" OPCIONES DE TRANSACCION "
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="-240dp"
            android:text=" INGRESE DATOS DE TRANSACCION "
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3C3B3B"
            android:layout_marginLeft="-350dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#3C3B3B"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_account_circle_24"/>

            <ImageButton
                android:id="@+id/ibregresartransaccion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="#3C3B3B"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_baseline_logout_24"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="-550dp"
        android:gravity="center"
        android:background="#3C3B3B" >

        <EditText
            android:id="@+id/etidentificaciontransaccion"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="-90dp"
            android:textColorHint="#ffff"
            android:textColor="#FFFFFF"
            android:inputType="number"
            android:textSize="15dp"
            android:enabled="false"
            android:drawableStart="@drawable/ic_baseline_person_add_24"/>

        <EditText
            android:id="@+id/etfechatransaccion"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="-30dp"
            android:hint="  Ingrese fecha de transaccion"
            android:textColorHint="#ffff"
            android:textColor="#FFFFFF"
            android:inputType="date"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_baseline_date_range_24"/>

        <EditText
            android:id="@+id/ethoratransaccion"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="30dp"
            android:hint="  Ingrese hora de transaccion"
            android:textColorHint="#ffff"
            android:textColor="#FFFFFF"
            android:inputType="number"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_baseline_hourglass_bottom_24" />

        <EditText
            android:id="@+id/etsaldotransaccion"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="90dp"
            android:hint="  saldo de la transaccion"
            android:textColorHint="#ffff"
            android:textColor="#FFFFFF"
            android:inputType="number"
            android:textSize="15dp"
            android:drawableStart="@drawable/ic_baseline_person_add_24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="#3C3B3B"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/ibconsignar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="85dp"
            android:text="GUARDAR"
            android:textAllCaps="false"
            android:background="#333232"
            android:src="@drawable/ic_baseline_get_app_24"/>

        <ImageButton
            android:id="@+id/ibretirar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"
            android:text="BUSCAR"
            android:textAllCaps="false"
            android:background="#333232"
            android:src="@drawable/ic_baseline_wallet_24"/>

    </LinearLayout>


</LinearLayout>